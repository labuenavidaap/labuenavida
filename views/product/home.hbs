<h3 class="text-center">Products with best rate:</h3>

<section id="products" class="container d-flex justify-content-center">
  <div class="row">
    <div class="all-products">
      {{#each products}}
      <div class="card m-3" style="width: 18rem;">
        <a href="products/{{this.id}}">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <ul>
              {{#each category as |type|}}
              <li>{{type}}</li>
              {{/each}}
            </ul>
          </div>
        </a>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Price: {{this.price}}â‚¬</li>
          <li class="list-group-item">Company: <a
              href="/producer-profile/{{this.producer.id}}">{{this.producer.companyName}}</a></li>
          <li class="list-group-item"><a href="/producer-profile/{{this.producer.id}}">See other products of
              the company</a></li>
        </ul>
        <div class="card-body d-flex justify-content-center">
          <div>
            <button class="btn btn-sm m-2 btn-outline-info" id="{{this.id}}" onclick="addToWishlist(event)">
              <i class="fa fa-heart">Wishlist</i>
            </button>
          </div>
          <div>
            <button class="btn btn-sm m-2 btn-outline-success " id="{{this.id}}" onclick="addToCart(event)">
              <i class="fa fa-cart-arrow-down">Add to Cart</i>
            </button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
