<h1 class="text-center py-5">Edit user </h1>
<article class="container">
    <div class="row">


        <div class="col-12">
            <form action="/users/{{user._id}}/edit" method="POST" enctype="multipart/form-data">

                {{#if (orCond user tryProducer)}}


                <div class="container">
                    <div class="row">
                        <div class="col-12 container-upload-logo">
                            {{#if user.logo}}
                            <img src="{{user.logo}}" alt="{{user.logo}} logo">
                            {{/if}}
                            <label class="custom-file-upload">
                                <input type="file" name="logo" style="background-color: rgba(155, 251, 242, 0.53);" />
                                <i class="fa fa-cloud-upload pl-1"></i> Upload logo
                            </label>
                        </div>
                    </div>
                </div>


                {{#if error.logo}}
                <div class="invalid-feedback">
                    {{error.logo.message}}
                </div>
                {{/if}}

                {{/if}}
                <div class="container-form-edit-user">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input name="name" type="text" value="{{user.name}}"
                            class="form-control {{#if error.name }}is-invalid{{/if}}" id="name" required>

                        {{#if error.name}}
                        <div class="invalid-feedback">
                            {{error.name.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" value="{{user.email}}"
                            class="form-control {{#if error.email }}is-invalid{{/if}}" id="email" name="email"
                            placeholder="Enter name" required>

                        {{#if error.email}}
                        <div class="invalid-feedback">
                            {{error.email.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="mb-3 form-control {{#if error.password }}is-invalid{{/if}}"
                            id="password" name="password" disabled>
                        <button type="button" data-enable="password" class="btn btn-sm"
                            style="background-color:#226162; color:white">Change
                            password</button>

                        {{#if error.password}}
                        <div class="invalid-feedback">
                            {{error.password.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="bio">Phone</label>
                        <input type="tel" class="form-control {{#if error.phone }}is-invalid{{/if}}" name="phone"
                            id="bio" value="{{user.phone}}">

                        {{#if error.phone}}
                        <div class="invalid-feedback">
                            {{error.phone.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="bio">Address</label>
                        <input type="text" class="form-control {{#if error.address }}is-invalid{{/if}}" name="address"
                            id="address" value="{{user.address}}">

                        {{#if error.address}}
                        <div class="invalid-feedback">
                            {{error.address.message}}
                        </div>
                        {{/if}}
                    </div>

                    {{#if (orCond user tryProducer)}}

                    <div class="form-group">
                        <label for="Cname">Company Name</label>
                        <input type="text" class="form-control {{#if error.companyName }}is-invalid{{/if}}"
                            name="companyName" id="cName" value="{{user.companyName}}"></input>

                        {{#if error.companyName}}
                        <div class="invalid-feedback">
                            {{error.companyName.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="Caddress">Company Address</label>
                        <input type="text" class="form-control {{#if error.companyName }}is-invalid{{/if}}"
                            name="compAddress" id="cName" value="{{user.compAddress}}"></input>
                        {{#if error.compAddress}}
                        <div class="invalid-feedback">
                            {{error.compAddress.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="Cmail">Company Email</label>
                        <input type="email" class="form-control {{#if error.compMail }}is-invalid{{/if}}"
                            name="compMail" id="cName" value="{{user.compMail}}"></input>

                        {{#if error.compMail}}
                        <div class="invalid-feedback">
                            {{error.compMail.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="CPhone">Company Phone</label>
                        <input type="tel" class="form-control {{#if error.compPhone }}is-invalid{{/if}}"
                            name="compPhone" id="cPhone" value="{{user.compPhone}}"></input>

                        {{#if error.compPhone}}
                        <div class="invalid-feedback">
                            {{error.compPhone.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="CLink">Company URL</label>
                        <input type="text" class="form-control {{#if error.compLink }}is-invalid{{/if}}" name="compLink"
                            id="cPhone" value="{{user.compLink}}"></input>

                        {{#if error.compLink}}
                        <div class="invalid-feedback">
                            {{error.compLink.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="CBio">Company Bio</label>
                        <textarea rows="5" type="text" class="form-control {{#if error.bio }}is-invalid{{/if}}"
                            name="bio" id="cPhone" value="{{user.bio}}"></textarea>

                        {{#if error.bio}}
                        <div class="invalid-feedback">
                            {{error.bio.message}}
                        </div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="certificates">Company Certificates</label>
                        <input type="text" class="form-control {{#if error.certificates }}is-invalid{{/if}}"
                            name="certificates" id="cPhone" value="{{user.certificates}}"></input>


                        {{#if error.certificates}}
                        <div class="invalid-feedback">
                            {{error.certificates.message}}
                        </div>
                        {{/if}}
                    </div>
                </div>


                <div class="container-form-edit-user">
                    <label class=""> Picture of the Company</label>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-12 container-upload-logo">
                            <label class="custom-file-upload">
                                <input type="file" name="pictures"
                                    style="background-color: rgba(155, 251, 242, 0.53);" />
                                <i class="fa fa-cloud-upload pl-1"></i> Upload picture
                            </label>
                        </div>
                    </div>
                </div>
                {{#unless user.producer}}
                
                <div class="container-form-edit-user flex-row">
                    <div class="form-group">
                        <input type="checkbox" id="politic" name="politic" value="true" class="{{#if error.politic}}is-invalid{{/if}}">
                        <label for="politic"> 
                            Agree with our <a href="">Terms and
                                Conditions</a>
                        </label>
                        {{#if error.politic}}
                        <div class="invalid-feedback alert alert-danger" role="alert">
                            {{error.politic.message}}
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/unless}}
        </div>


        {{#if error.pictures}}
        <div class="invalid-feedback">
            {{error.pictures.message}}
        </div>
        {{/if}}



        {{/if}}
        <div class="container">
            <div class="row">
                <div class="col-12 container-upload-logo">
                    <button type="submit" id="producer" class="home-sign-in d-flex justify-content-center">Update
                        profile</button>
                </div>
            </div>
        </div>
    </div>
    </form>
    </div>
    </div>
</article>