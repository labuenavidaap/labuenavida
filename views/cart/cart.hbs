<h1 class="text-center py-5">CART</h1>
<div>
    <ul class="list-group">
        {{#each cart}}
        <li class="list-group-item cart-container">
            <span class="px-2"><img src="{{this.product.image }}" alt="{{this.product.name }}"
                    style="width: 50px;" /></span>
            <span class="pl-5"> Product: {{this.product.name }}</span>
            <span class="pl-5">Quantity: {{this.quantity}}</span>
            <span class="pl-5">Price:Â {{this.product.price}}</span>
            <span class="float-right">Total: {{cartPrice this}}</span>
            <span class="float-right">
                <div>
                    <button class="btn btn-sm m-2 btn-outline-danger " id="{{this.id}}"
                        onclick="deleteFromCart(event)">
                        Delete from Cart
                    </button>
                </div>
            </span>
        </li>

        {{/each}}
        <li>
            <span class="float-right p-5">Final Price: {{finalCartPrice}}</span>
        </li>
        <li>
            <a href="/confirm-order/{{user.id}}" class="btn btn-success float-right mx-5">Checkout</a>
        </li>
    </ul>

</div>