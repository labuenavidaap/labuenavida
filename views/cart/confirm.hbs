{{#unless user.address}}
<div class="modal custom hide fade" tabindex="-1" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Wait, {{currentUser.name}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>IMPORTANT: <br> If you want to buy a product, you must complete a few fields of our form.
                    Your address and your phone number.</p>
            </div>
            <div class="modal-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-12 container-upload-logo">
                            <a href="/users/{{user.id}}/edit"
                                class="home-sign-in btn-hover d-flex justify-content-center">Update
                                profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/unless}}
<h3 class="text-center py-3">Check your data and order, {{user.name}}:</h3>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div>
                <h5><b>Check your Data:</b></h5>
                <hr>
                <p>Name: {{user.name}}</p>
                <hr>
                <p>Address: {{user.address}}</p>
                <hr>
                <p>Phone: {{user.phone}}</p>
                <hr>
                <div class="d-flex justify-content-center">
                    <a href="/users/{{user.id}}/edit"> <button class="home-sign-in btn-hover d-flex
                            justify-content-center" style="text-decoration: none;">Change your data</button></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <ul class="list-group">
                <div class="container-cart">
                    {{#each cart}}
                    <li class="list-group-item cart-container">

                        <ul class="comment-panel-xl ">
                            <li> <span class="px-2"><img src="{{this.product.image }}"
                                        alt="{{this.product.name }}" /></span></li>
                            <li class="text-left">
                                <div class="text-left" style="width: 200px;">
                                    Product: {{this.product.name }}
                                </div>
                            </li>
                            <li>Quantity: {{this.quantity}} units.</li>
                            <li>Price: {{this.product.price}} €</li>
                            <li class="float-right">Total: {{cartPrice this}} €</li>
                            <li>
                                <div class="remove-from-cart" style="opacity: 0;">
                                    <form action="">
                                        <button id="">
                                            <i class="fa fa-times delete-icon" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    </li>
                    {{/each}}
                </div>
                <li>
                    <span class="cart-final-price">Final Price: {{finalCartPrice}} €</span>
                </li>
                <li>
                    <div class="d-flex justify-content-center">
                        <button class="home-sign-in btn-hover d-flex
                            justify-content-center" id="checkout-button">Confirm Payment</button>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script src="/js/stripe.js"></script>