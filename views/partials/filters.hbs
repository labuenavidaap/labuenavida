<section class="fixed-top pl-3 d-flex justify-content-center filter" style="width: 15%;">
    <div class="mt-3">
        <h5>Search by name:</h5>
        <form class="form-inline my-lg-0 text-center" action="/products">
            <input value="{{search}}" name="search" class="form-control mr-sm-2" type="search"
                placeholder="Search by Title" class="text-center">
        </form>
    </div>

    <div class="mt-3">
        <h5>Search by properties:</h5>
        <form class="form-inline my-lg-0 d-flex justify-content-center text-center" action="/products">
            <div class="form-group">
                <label for="categories">Categories</label>
                <input type="checkbox" id="Food" name="categories" value="Food">
                <label for="Food"> Food</label><br>
                <input type="checkbox" id="Drink" name="categories" value="Drink">
                <label for="Drink"> Drink</label><br>
                <input type="checkbox" id="Vegetables" name="categories" value="Vegetables">
                <label for="Vegetables"> Vegetables</label><br>
                <input type="checkbox" id="Fruit" name="categories" value="Fruit">
                <label for="Fruit"> Fruit</label><br>
                <input type="checkbox" id="Meat" name="categories" value="Meat">
                <label for="vehicMeatle3"> Meat</label><br>
                <input type="checkbox" id="Alcohol" name="categories" value="Alcohol">
                <label for="Alcohol"> Alcohol</label><br>
            </div>

            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" id="input-content" name="max-price" placeholder="Max Price" value="0" min="0" max="200">
                <input type="number" id="input-content" name="min-price" placeholder="Min Price" value="0" min="0" max="200">
            </div>
            <div class="form-group">
                <label for="price">Rate</label>
                <input type="number" id="input-content" name="min-rate" placeholder="Min Rate" value="0" min="0" max="5">
                <input type="number" id="input-content" name="min-rate" placeholder="Min Rate" value="5" min="0" max="5">
            </div>
            <button>
                Apply filter
            </button>
        </form>
    </div>
</section>