<div id="form" class="w-100 ">
    <h4>NEW PRODUCT:</h4>
    <form action="/new-product" method="POST" enctype="multipart/form-data">

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="input-content" name="name" placeholder="Name" class="w-100">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" id="input-content" name="description" placeholder="Description" class="w-100">
        </div>

        <div class="form-group">
            <label for="categories">Categories</label>
            <input type="categories" id="input-content" name="categories" placeholder="Categories" class="w-100">
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input type="price" id="input-content" name="price" placeholder="Price in Euros" class="w-100">
        </div>

        <div class="form-group">
            <label for="stock">Stock</label>
            <input type="stock" id="input-content" name="stock" placeholder="Stock" class="w-100">
        </div>

        <div class="form-group">
            <label for="image">Image</label>
            <input type="file" id="input-content" name="image" placeholder="Image" class="w-100">
        </div>

        <button type="submit" class="btn btn-primary mt-3 mb-4">Add product</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>