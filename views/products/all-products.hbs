<h2 class="text-center"> All Products</h2>
<section id="products" class="container d-flex justify-content-center">
    <div class="row">     
        <div class="all-products">
            {{#each products}}
            <div class="card m-3" style="width: 18rem;">
                <a href="products/{{this.id}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <ul>
                            {{#each category as |type|}}
                            <li>{{type}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </a>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Price: {{this.price}}â‚¬</li>
                    <li class="list-group-item">Company: <a
                            href="/producer-profile/{{this.producer.id}}">{{this.producer.companyName}}</a></li>
                    <li class="list-group-item"><a href="/producer-profile/{{this.producer.id}}">See other products of
                            the company</a></li>
                </ul>
                <div class="card-body d-flex justify-content-center">
                    <form action="/product/{{this.id}}/wishlist" method="POST">
                        <button class="btn btn-sm m-2 btn-outline-info" id="{{this.id}}">
                            <i class="fa fa-heart">Wishlist</i>
                        </button>
                    </form>
                    <form action="/product/{{this.id}}/cart" method="POST">
                        <button class="btn btn-sm m-2 btn-outline-success " id="{{this.id}}">
                            <i class="fa fa-cart-arrow-down">Add to Cart</i>
                        </button>
                    </form>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>